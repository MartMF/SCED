{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Arkham SCE: Build",
      "type": "shell",
      "command": "go",
      "windows": {
        "args": [
          "run",
          "main.go",
          "--moddir=${workspaceFolder}",
          "--modfile=${env:USERPROFILE}\\Documents\\My Games\\Tabletop Simulator\\Saves\\ArkhamSCE.json"
        ],
      },
      "osx":{
        "args": [
          "run",
          "main.go",
          "-moddir",
          "${workspaceFolder}",
          "-modfile",
          "${userHome}/Library/Tabletop Simulator/Saves/ArkhamSCE.json"
        ],
      },
      "options": {
        "cwd": "${workspaceFolder}${pathSeparator}..${pathSeparator}TTSModManager"
      },
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Arkham SCE: Decompose",
      "type": "shell",
      "command": "go",
      "windows": {
        "args": [
          "run",
          "main.go",
          "--moddir=${workspaceFolder}",
          "--modfile=${env:USERPROFILE}\\Documents\\My Games\\Tabletop Simulator\\Saves\\ArkhamSCE.json",
          "--reverse"
        ],
      },
      "osx":{
        "args": [
          "run",
          "main.go",
          "-moddir",
          "${workspaceFolder}",
          "-modfile",
          "${userHome}/Library/Tabletop Simulator/Saves/ArkhamSCE.json",
          "-reverse"
        ],
      },
      "options": {
        "cwd": "${workspaceFolder}${pathSeparator}..${pathSeparator}TTSModManager"
      },
      "problemMatcher": []
    },
{
  "label": "Extract LuaScript to L.lua",
  "type": "shell",
  "command": "powershell",
  "args": [
    "-NoProfile",
    "-Command",
    "(Get-Content '${file}') -match '\"LuaScript\"' | ForEach-Object { $_ -replace '.*\"LuaScript\"\\s*:\\s*\"','' -replace '\"$','' } | Out-File -Encoding utf8 '${workspaceFolder}\\L.lua'"
  ],
  "problemMatcher": []
}
  ]
}
